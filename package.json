{
  "name": "piecode",
  "version": "0.1.0",
  "description": "The coding agent that cook easily",
  "type": "module",
  "bin": {
    "piecode": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "agent": "node src/cli.js --tui",
    "help": "node src/cli.js --help",
    "build": "node scripts/build.mjs",
    "install:local": "node scripts/install-local.mjs",
    "release": "node scripts/release.mjs",
    "release:dry-run": "node scripts/release.mjs",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "node_modules/eslint/bin/eslint.js src --fix"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "jsdom": "^28.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
